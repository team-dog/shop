<body>
  <div class="container">
    <div class="row">
      <div class="col-xs-9">
        <h2>ジャンル一覧</h2>

        <%= form_for(@genre, url: admins_genres_path) do |f| %>
          <div class="field row">
            <%= f.label :name, "ジャンル" %>
            <%= f.text_field :name %>
            <%= f.radio_button :is_valid, "true" %><span>有効</span>
            <%= f.radio_button :is_valid, "false" %><span>無効</span>
            <%= f.submit "追加" %>
          </div>
        <% end %>

        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th>状態</th>
              <th></th>
            </tr>
          </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>

            <% if genre.is_valid == true %>
            <td>有効</td>
            <% elsif genre.is_valid == false %>
            <td>無効</td>
            <% end %>

            <td>
              <%= link_to "編集する", edit_admins_genre_path(genre.id) %>
            </td>
          </tr>
        <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>
</body>