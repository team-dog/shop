<h1>注文履歴詳細</h1>
<div class = "show">
<p1>購入者</p1> 
<%= link_to @customer.name admin_customer_path(@customer) %>
<p1>配送先</p1>
<%= @order.postcode %>
<%= @order.address %>
<p1>支払い方法</p1>
<%= @order.payment %>
<p1>注文ステータス</p1>
<%= form_for(@new_product) do |f| %>
    <%= f.select :status,[["入金まち", 0],["入金確認", 1],["製作中", 2],["発送準備", 3],["発送済み", 4]]%>
    <%= f.submit "更新", class: "btn btn-primary" %>
<% end %>
</div>

<div class = "index table table-bordered">
<thead>
    <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
    </tr>
</thead>
<tbody>
<%= @orders.each do |order| %>
    <tr>
        <td><%= order.product_id.name %></td>
        <td><%= order.products.price %></td>
        <td><%= order.products.quantity %></td>
        <td><%= order.products.price %>*<%= order.products.quantity %></td>
<% end %>
        <td>
        <%= form_for(@order_product) do |f| %>
            <%= f.select :status,[["着手不可", 0],["製作まち", 1],["製作中", 2],["製作完了", 3]　%>
            <%= f.submit "更新", class: "btn btn-primary", style{"display: inline-block;"} %>
        <% end %>
        </td>
    </tr>
</tbody>

</div>