<div class="table table-bordered">
    <thead>
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
    </thead>
    <tbody>
    <%= @order_products.each do |product| %>
        <tr>
            <td><%= product.created_at %></td>
            <td><%= product. %></td>
            <td><%= product.quantity %></td>
            <td><%= product.price %>*<%= product.quantity %></td>
        </tr>
    <% end %>
    </tbody>
</div>