<body>
  <div class="row">
    <div class="col-xs-9">
      <h2>ジャンル一覧・追加</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr> 
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= genre.is_valid%>
              </td>
              <td>
                <%= link_to "編集する",admin_genre_path, method: :post %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</body>