<h1>注文情報入力</h1>

<div class="pay">
    <p>支払方法</p>
<%= form_for(@order) url: orders_confirm_path do |f| %> 
    <%= f.radio_button :payment, 0 %>
    <%= f.label :payment, "クレジットカード", {style: "display: block;"} %>
    <%= f.radio_button :payment, 1 %>
    <%= f.label :payment, "銀行振込", {style: "display: block;"} %>
<% end %>
</div>
<div class="shipping">
    <p>お届け先</p>
<%= form_for(@customer) url: orders_confirm_path do |f| %>
    <%= f.radio_button :address %>
    <%= f.label :address, "ご自身の住所", {style: "display: block;"} %>
 <% end %>
<%= form_for(@destination) url: orders_confirm_path do |f| %>
    <%= f.radio_button :address %>
    <%= f.label :address, "既に登録済み", {style: "display: block;"} %>
 <% end %>
<%= form_for(@new_address) url: orders_confirm_path do |f| %>
    <%= f.radio_button :address %>
    <%= f.label :address, "新しいお届け先", {style: "display: block;"} %>
 <% end %>
</div>

<%= link_to "確認画面へ", orders_confirm_path, class: "btn btn-primary" %>

