<div class="row">
	<h2>ショッピングカート</h2>
	<%= link_to "カートを空にする", empty_path, method: :delete, class: "" %>
</div>

<div class="row">
		<table class="table">
			<thead>
				<tr>
					<th colspan="2">商品名</th>
					<th>単価(税込)</th>
					<th colspan="2">数量</th>
					<th>小計</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				<% total_price = 0 %>
				<% @cart_products.each do |cart_product| %>
				<tr>
					<td></td>
					<td><%= cart_product.product.name %></td>
					<td>¥<%= cart_product.product.price %></td>
					<%= form_with model: cart_product, url: cart_product_path(cart_product.id), method: :patch, local: true do |f| %>
					<td><%= f.text_field :quantity %></td>
					<td><%= f.submit "変更" %></td>
					<% end %>
					<td><%= cart_product.subtotal_price %></td>
					<% total_price += cart_product.subtotal_price %>
					<td><%= link_to "削除する", cart_product_path(cart_product), method: :delete %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
</div>
<div class="row">
	<%= link_to '情報入力に進む', new_order_path %>
	<p>合計</p>
	<%= total_price %>
</div>
