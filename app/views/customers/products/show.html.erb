<div class="row">

	<%= render 'layouts/genre_search' %>

	<div class="col-xs-9">
		<div class="row">
			<div class="product-image"><%= attachment_image_tag(@product, :image_id, :fill, 174, 100, fallback: "no-image-mini.jpg") %></div>
			<div>
				<h2><%= @product.name %></h2>
				<p><%= @product.description %></p>
				<p>¥<%= @product.price %>(税抜き)</p>
			</div>
		</div>
		<% if customer_signed_in? %>
			<div>
				<%= form_with model: @quantity, url: cart_products_path(product_id: @product.id), method: :post,local: true do |f| %>
				<%= f.select :quantity, [["1", 1],["2", 2]] %>
				<%= f.submit 'カートに入れる' %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>